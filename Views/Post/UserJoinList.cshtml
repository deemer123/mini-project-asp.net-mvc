                            <th>ยกเลิกกิจกรรม</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="status_activity wait">@join.Status</td>
                            <td><a href="#">@join.Post.Title</a></td>
                            <td>@join.Post.Score</td>
                            <td> @join.Post.AppointmentDate.ToString("yyyy-MM-dd") - @join.Post.TimeEnd.ToString("HH:mm")</td>
                            <td>08:30 - 15:30</td>
                            <td><button class="btn cancal"><a asp-controller="Post" asp-action="JoinDel" >ยกเลิก</a></button></td>
