@model DemoVolunteer.Models.Post

<img src="@Model.ImgURL" alt="post-pic" width="500px">
<h1>@Model.Title</h1>
<p>สถานที่ :@Model.Location</p>
<p>เวลากิจกรรม :@Model.AppointmentDate.ToString("dd-MM-yyyy") เวลา @Model.TimeStart.ToString("hh:mm tt") - @Model.TimeEnd.ToString("hh:mm tt")</p>
<p>ชั่วโมงกิจกรรม :@Model.Score</p>
<p>ประเภทกิจกรรม :@Model.Category.Name</p>
<p>ผู้จัด : :@Model.Owner.FullName</p>
<p>ติดต่อ : :@Model.Owner.PhoneNumber</p>

<hr>

<h2>เปิดรับ @Model.Joins.Count/@Model.MaxParticipants</h2>

<p>รายละเอียดกิจกรมม</p>
<p>@Model.Description</p>

@if(Model.AppointImg != null){
    <img id="preview2" src=@Model.AppointImg alt="Image Preview" width="500" height="600" style="display: block;">
}

<p>เวลาปิดโพสต์กิจกรรม: @(Model.AppointmentDateEnd.HasValue ? Model.AppointmentDateEnd.Value.ToString("dd-MM-yyyy") : "")</p>

<form method="POST" asp-action="Join">
    <input type="hidden" name="postId" value=@Model.PostId>
    @if(Model.Status == "Open"){
        <button type="submit">เข้าร่วมจิตอาสา</button>
    }
    else if(Model.Status == "Full"){
        <button type="submit" disabled>สมาชิกเต็ม</button>
    }
    else if(Model.Status == "Closed"){
        <button type="submit" disabled>ปิดการรับสมาชิก</button>
    }
    else if(Model.Status == "Expired"){
        <button type="submit" disabled>โพสต์หมดอายุแล้ว</button>
    }
</form>


